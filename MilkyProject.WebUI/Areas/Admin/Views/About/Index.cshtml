@model List<MilkyProject.WebUI.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Hakkımızda</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımızdalar</h4>
                    <p class="card-description">
                        Aşagıdaki tablodan  Hakkımızdalar bilgilerini görüntüleyebilir,üzerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ana Başlık</th>
                                    <th>Başlık</th>
                                    <th>Resim</th>
                                    <th>Açıklama</th>
                                    <th>İkon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.aboutId</td>
                                        <td>@item.header</td>
                                        <td>@item.title</td>
                                        <td><img alt="Image placeholder" src="@item.imageUrl"></td>
                                        <td>@item.description</td>
                                        <td>@item.icon</td>
                                        <td><a href="/Admin/About/DeleteAbout/@item.aboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/About/UpdateAbout/@item.aboutId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
