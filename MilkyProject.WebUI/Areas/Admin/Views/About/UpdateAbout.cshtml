@model MilkyProject.WebUI.Dtos.AboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <br />
            <br />
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Hakkımızda Güncelleme Sayfası </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımızda Düzenleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan hakkımızda üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                            <label>Hakkımızda Id</label>
                            <input type="text" asp-for="aboutid" class="form-control" />
                            <br />
                            <label>Ana Başlık</label>
                            <input type="text" asp-for="header" class="form-control" />
                            <br />
                            <label>Görsel</label>
                            <input type="text" asp-for="imageUrl" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="description" class="form-control" />
                            <br />
                            <label>Başlık</label>
                            <input type="text" asp-for="title" class="form-control" />
                            <br />
                            <label>İkon</label>
                            <input type="text" asp-for="icon" class="form-control" />
                            <br />
                            <button class="btn btn-info">Hakkımızda Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

