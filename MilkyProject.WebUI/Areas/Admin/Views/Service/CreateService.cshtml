@model MilkyProject.WebUI.Dtos.ServiceDtos.CreateServiceDto

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
<br />
<br />
<br />
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Hizmet Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak hizmet ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">
                        <label>Başlık</label>
                        <input type="text" asp-for="title" class="form-control" />
                        <br />
                        <label>Görsel</label>
                        <input type="text" asp-for="imageurl" class="form-control" />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" asp-for="description" class="form-control" />
                        <br />
                        <label>Küçük Görsel</label>
                        <input type="text" asp-for="smallimageurl" class="form-control" />
                        <br />
                        <button class="btn btn-info">Hizmet Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

