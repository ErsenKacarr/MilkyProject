@model MilkyProject.WebUI.Dtos.ServiceDtos.UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
<br />
<br />
<br />
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetlerimiz Düzenleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan hizmetlerimiz üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                            <label>Service Id</label>
                            <input type="text" asp-for="serviceid" class="form-control" />
                            <br />
                            <label>Hizmet Adı</label>
                            <input type="text" asp-for="title" class="form-control" />
                            <br />
                            <label>Görsel</label>
                            <input type="text" asp-for="imageurl" class="form-control" />
                            <br />
                            <label>Küçük Görsel</label>
                            <input type="text" asp-for="smallimageurl" class="form-control" />
                            <br />
                            <label>Açıklama </label>
                            <input type="text" asp-for="description" class="form-control" />
                            <br />
                            <button class="btn btn-info">Hizmet Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

