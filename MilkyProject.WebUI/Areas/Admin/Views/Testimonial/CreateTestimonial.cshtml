@model MilkyProject.WebUI.Dtos.TestimonialDtos.CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Referans Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak Referans ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">
                        <label>Ad Soyad</label>
                        <input type="text" asp-for="namesurname" class="form-control" />
                        <br />
                        <label>Fotoğraf</label>
                        <input type="text" asp-for="imageurl" class="form-control" />
                        <br />
                        <label>Açıklama </label>
                        <input type="text" asp-for="description" class="form-control" />
                        <br />
                        <label>Meslek</label>
                        <input type="text" asp-for="profession" class="form-control" />
                        <br />
                        <button class="btn btn-info">Referans Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


