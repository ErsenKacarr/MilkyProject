@model MilkyProject.WebUI.Dtos.SocialMediaDto.CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Sosyal Medya Ekleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak Sosyal Medya ekleme işlemini tamamlayabilirsiniz.
                    </p>
                    <form method="post">
                        <label>Sosyal Medya Adı</label>
                        <input type="text" asp-for="name" class="form-control" />
                        <br />
                        <label>Link</label>
                        <input type="text" asp-for="link" class="form-control" />
                        <br />
                        <label>İkon</label>
                        <input type="text" asp-for="icon" class="form-control" />
                        <br />
                        <button class="btn btn-info">Sosyal Medya Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
