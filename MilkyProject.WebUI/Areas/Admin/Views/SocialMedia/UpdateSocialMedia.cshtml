@model MilkyProject.WebUI.Dtos.SocialMediaDto.UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <br />
            <br />
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Sosyal Medya Güncelleme Sayfası </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Düzenleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan Sosyal Medya üzerinde işlem yapabilirsiniz
                    </p>
                    <div class="table-responsive">
                        <form method="post">
                            <label>Sosyal Medya Id</label>
                            <input type="text" asp-for="socialmediaid" class="form-control" />
                            <br />
                            <label>Sosyal Medya Adı </label>
                            <input type="text" asp-for="name" class="form-control" />
                            <br />
                            <label>Link</label>
                            <input type="text" asp-for="link" class="form-control" />
                            <br />
                            <label>İkon</label>
                            <input type="text" asp-for="icon" class="form-control" />
                            <br />

                            <button class="btn btn-info">Sosyal Medya Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

