@model List<MilkyProject.WebUI.Dtos.AddressDtos.ResultAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Adres</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Adres</h4>
                    <p class="card-description">
                        Aşagıdaki tablodan  Adres bilgilerini görüntüleyebilir,üzerinde işlem yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adres Detayı</th>
                                    <th>Telefon</th>
                                    <th>E Mail</th>
                                    <th>Hafta İçi</th>
                                    <th>Hafta Sonu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.addressId</td>
                                        <td>@item.addressDetail</td>
                                        <td>@item.phone</td>
                                        <td>@item.emailAddress</td>
                                        <td>@item.weekdayBusinessHours</td>
                                        <td>@item.weekendBusinessHours</td>
                                        <td><a href="/Admin/Address/DeleteAddress/@item.addressId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Address/UpdateAddress/@item.addressId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Address/CreateAddress" class="btn btn-primary">Yeni Adres Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
